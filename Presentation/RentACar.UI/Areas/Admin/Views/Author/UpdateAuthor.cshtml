@model UpdateAuthorDto
@{
    ViewData["Title"] = "UpdateAuthor";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
	<div class="card-body">

		<h4 class="card-title text-center">Yeni Yazar Girişi</h4>

		<form method="post" class="mt-5">
			@Html.HiddenFor(x => x.Id)
			<div class="form-group">
				<label>Yazar Adı</label>
				<input type="text" class="form-control" placeholder="Yazar adını giriniz" required asp-for="Name" />
			</div>
			<div class="form-group">
				<label>Yazar Hakkında</label>
				<textarea type="text" class="form-control" placeholder="Yazar hakkında yazısını giriniz" required asp-for="Description" style="height: 250px"></textarea>
			</div>
			<div class="form-group">
				<label>Yazar Görsel Url</label>
				<input type="text" class="form-control" placeholder="Yazar görselini giriniz" required asp-for="ImageUrl" />
			</div>
			<div class="mt-4">
				<button type="submit" class="btn btn-primary waves-effect waves-light px-5">Kaydet</button>
			</div>
		</form>

	</div>
</div>
