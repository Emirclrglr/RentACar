@model X.PagedList.IPagedList<ResultCategoryDto>

@using X.PagedList.Mvc.Core

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row d-flex justify-content-center">
	<div class="col-md-8 ">
		<div class="card">
			<div class="card-body">
				<h4 class="card-title mb-4">Blog Kategori İşlemleri</h4>

				<div class="table-responsive">
					<table class="table table-hover mb-0">
						<thead>

							<tr class="text-center">
								<th>Kategori Adı</th>
								<th width="100">Düzenle</th>
								<th width="100">Sil</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model)
							{
								<tr class="text-center" style="font-size: 14px">
									<td class="align-middle">@item.Name</td>
									<td class="align-middle"><a href="/Admin/Category/UpdateCategory/@item.Id" class="rounded-pill btn btn-outline-primary"><i class="las la-edit" style="font-size: 20px"></i></a></td>
									<td class="align-middle"><a href="/Admin/Category/DeleteCategory/@item.Id" class="rounded-pill btn btn-outline-danger"><i class="las la-trash" style="font-size: 20px"></i></a></td>
								</tr>
							}
						</tbody>
					</table>

				</div>

			</div>

			<div class="d-flex justify-content-between">
				<a href="/Admin/Category/CreateCategory" class="btn btn-outline-primary ml-5 mt-3 px-5" style="height: 36px">+ Yeni Kategori Girişi</a>
				<nav aria-label="Pagination" class="d-flex justify-content-end mt-3 mb-3 mr-5" style="font-size: 16px">
					@Html.PagedListPager(Model, page => Url.Action("Index", new { page }),
											new PagedListRenderOptions
					{
						LiElementClasses = new[] { "page-item mr-2" },
						PageClasses = new[] { "page-link" }
					})
				</nav>
			</div>

		</div>

	</div>
</div>



