@model List<ResultCarFeatureByCarIdDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row d-flex justify-content-center">
    <div class="col-3">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title m-0">
                    @ViewBag.Car
                </h5>
            </div>
            <h3 class="text-center pt-5">Araç Özellikleri</h3>
            <div class="card-body d-flex justify-content-center">
                <form method="post">
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <div class="form-check ml-5 pl-5">
                            <input type="hidden" asp-for="@Model[i].Id" />
                            <input type="checkbox" id="isavailable_@i" class="form-check-input" asp-for="@Model[i].IsAvailable" />
                            <label class="form-check-label" for="isavailable_@i">@Model[i].CarFeatureName</label>
                        </div>
                    }

                    <button class="btn btn-block btn-outline-primary rounded-pill mt-4">Kaydet</button>
                </form>
            </div>
        </div>
    </div>
</div>