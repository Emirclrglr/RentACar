@model List<ResultFeatureDto>

@{
    ViewData["Title"] = "CreateFeatureByCar";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row d-flex justify-content-center">
    <div class="col-3">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title m-0">
                </h5>
            </div>
            <h3 class="text-center pt-5">Araca Ait Özellik Ekleme Sayfası</h3>
            <div class="card-body d-flex justify-content-center">
                <form method="post">
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <div class="form-check ml-5 pl-5">
                            <input type="hidden" asp-for="@Model[i].Id" />
                            <input type="hidden" asp-for="@Model[i].FeatureName" />
                            <input type="checkbox" class="form-check-input" />
                            <label class="form-check-label" >@Model[i].FeatureName</label>
                        </div>
                    }

                    <button class="btn btn-block btn-outline-primary rounded-pill mt-4">Kaydet</button>
                </form>
            </div>
        </div>
    </div>
</div>