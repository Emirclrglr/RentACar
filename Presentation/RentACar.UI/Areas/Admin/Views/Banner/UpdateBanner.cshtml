@model UpdateBannerDto
@{
    ViewData["Title"] = "UpdateBanner";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
	<div class="card-body">

		<h4 class="card-title text-center">Banner Düzenle</h4>

		<form method="post" class="mt-5">
			@Html.HiddenFor(x => x.Id)
			<div class="form-group">
				<label>Başlık</label>
				<input type="text" class="form-control" placeholder="Başlık giriniz" required asp-for="Title" />
			</div>
			<div class="form-group">
				<label>Açıklama</label>
				<input type="text" class="form-control" placeholder="Açıklama giriniz" required asp-for="Description" />
			</div>
			<div class="form-group">
				<label>Video Url</label>
				<input type="text" class="form-control" placeholder="Video Url giriniz" required asp-for="VideoURL" />
			</div>
			<div class="form-group">
				<label>Video Açıklama</label>
				<input type="text" class="form-control" placeholder="Video açıklaması giriniz" required asp-for="VideoDescription" />
			</div>
			<div class="mt-4">
				<button type="submit" class="btn btn-primary waves-effect waves-light px-5">Kaydet</button>
			</div>
		</form>

	</div>
</div>


