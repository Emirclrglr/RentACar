@model X.PagedList.IPagedList<ResultSocialMediaDto>

@using X.PagedList.Mvc.Core
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row d-flex justify-content-center">
	<div class="col-md-8 ">
		<div class="card">
			<div class="card-body">
				<h4 class="card-title mb-4">Sosyal Medya İşlemleri</h4>

				<div class="table-responsive">
					<table class="table table-hover mb-0">
						<thead>
							<tr class="text-center">
								<th width="200">İkon</th>
								<th>Sosyal Medya</th>
								<th width="110">Düzenle</th>
								<th width="110">Ziyaret Et</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model)
							{
								<tr class="text-center" style="font-size: 14px">
									<td class="align-middle"><i class="@item.Icon la-5x"></i></td>
									<td class="align-middle">@item.Name</td>
									<td class="align-middle"><a href="/Admin/SocialMedia/UpdateSocialMedia/@item.Id" class="rounded-pill btn btn-outline-primary"><i class="las la-edit" style="font-size: 20px"></i></a></td>
									<td class="align-middle"><a href="/Home" class="rounded-pill btn btn-outline-success" target="_blank"><i class="las la-hand-point-right" style="font-size: 20px"></i></a></td>
								</tr>
							}
						</tbody>
					</table>

				</div>

			</div>

			<div class="d-flex justify-content-between">
				<a href="/Admin/SocialMedia/CreateSocialMedia" class="btn btn-outline-primary ml-5 mt-3 px-5" style="height: 36px">+ Yeni Sosyal Medya Girişi</a>
				<nav aria-label="Sayfalandırma" class="d-flex justify-content-end mt-3 mb-3 mr-5" style="font-size: 16px">
					@Html.PagedListPager(Model, page => Url.Action("Index", new { page }),
											new PagedListRenderOptions
					{
						LiElementClasses = new[] { "page-item mr-2" },
						PageClasses = new[] { "page-link" }
					})
				</nav>
			</div>
		</div>

	</div>
</div>
