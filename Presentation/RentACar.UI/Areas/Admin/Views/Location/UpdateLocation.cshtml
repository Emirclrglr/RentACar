@model UpdateLocationDto
@{
    ViewData["Title"] = "UpdateLocation";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
	<div class="card-body">

		<h4 class="card-title text-center">Lokasyon Düzenle</h4>

		<form method="post" class="mt-5">
			@Html.HiddenFor(x => x.Id)
			<div class="form-group">
				<label>Lokasyon Adı</label>
				<input type="text" class="form-control" placeholder="Lokasyon adını giriniz" required asp-for="LocationName" />
			</div>
			<div class="mt-4">
				<button type="submit" class="btn btn-primary waves-effect waves-light px-5">Kaydet</button>
			</div>
		</form>

	</div>
</div>

