@model UpdateTestimonialDto
@{
    ViewData["Title"] = "UpdateTestimonial";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
	<div class="card-body">

		<h4 class="card-title text-center">Referans Düzenle</h4>

		<form method="post" class="mt-5">
			@Html.HiddenFor(x => x.Id);
			<div class="form-group">
				<label>Referans Adı</label>
				<input type="text" class="form-control" placeholder="Referans adını giriniz" required asp-for="TestimonialName" />
			</div>
			<div class="form-group">
				<label>Referans Unvanı</label>
				<input type="text" class="form-control" placeholder="Referans Unvanı giriniz" required asp-for="TestimonialTitle" />
			</div>
			<div class="form-group">
				<label>Referans Görseli</label>
				<input type="text" class="form-control" placeholder="Referans Görseli giriniz" required asp-for="ImageURL" />
			</div>
			<div class="form-group">
				<label>Referans Yorumu</label>
				<textarea type="text" class="form-control" placeholder="Referans Yorumu giriniz" required asp-for="TestimonialComment" style="height: 300px"></textarea>
			</div>

			<div class="mt-4">
				<button type="submit" class="btn btn-primary waves-effect waves-light px-5">Kaydet</button>
			</div>
		</form>

	</div>
</div>

