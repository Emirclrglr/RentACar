@model CreateReservationDto
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_UILayout.cshtml";
}

<style>
	.custom-card-shadow {
		box-shadow: 0px 4px 45px -15px rgba(0,0,0,0.7);
		-webkit-box-shadow: 0px 4px 45px -15px rgba(0,0,0,0.7);
		-moz-box-shadow: 0px 4px 45px -15px rgba(0,0,0,0.7);
	}

</style>

<section class="hero-wrap hero-wrap-2 js-fullheight" style="background-image: url('/carbook-master/images/bg_3.jpg');" data-stellar-background-ratio="0.5">
	<div class="overlay"></div>
	<div class="container">
		<div class="row no-gutters slider-text js-fullheight align-items-end justify-content-start">
			<div class="col-md-9 ftco-animate pb-5">
				<p class="breadcrumbs"><span class="mr-2"><a href="/">Ana Sayfa <i class="ion-ios-arrow-forward"></i></a></span> <span>Rezervasyon <i class="ion-ios-arrow-forward"></i></span></p>
				<h1 class="mb-3 bread">Araç Rezervasyon Formu</h1>
			</div>
		</div>
	</div>
</section>

<div class="container">
	<div class="card m-5 p-5 custom-card-shadow">
		<h3 class="text-center">Rezervasyon Bilgileriniz</h3>
		<div class="card-body">
			<form method="post">
				<div class="form-group">
					<input type="hidden" class="form-control" asp-for="CarId" value="@ViewBag.carid" required />
				</div>
				<div class="form-group">
					<input type="text" class="form-control" asp-for="Firstname" placeholder="Adınız" required />
				</div>
				<div class="form-group">
					<input type="text" class="form-control" asp-for="Lastname" placeholder="Soyadınız" required />
				</div>
				<div class="form-group">
					<input type="email" class="form-control" asp-for="Email" placeholder="Mail Adresiniz" required />
				</div>
				<div class="form-group">
					<input type="tel" class="form-control" asp-for="PhoneNumber" placeholder="Telefon Numaranız" required />
				</div>
				<div class="form-group">
					@Html.DropDownListFor(x => x.PickUpLocationId, (List<SelectListItem>)ViewBag.locationList, "Teslim Almak İstediğiniz Lokasyon", new { @class = "form-control" })
				</div>
				<div class="form-group">
					@Html.DropDownListFor(x => x.DropOffLocationId, (List<SelectListItem>)ViewBag.locationList, "Teslim Etmek İstediğiniz Lokasyon", new { @class = "form-control" })
				</div>
				<div class="form-group">
					<input type="text" class="form-control" asp-for="Age" placeholder="Yaşınız" required />
				</div>
				<div class="form-group">
					<label>Ehliyet Yılınız</label>
					<input type="date" class="form-control" asp-for="DriverLicenseDate" required />
				</div>
				<div class="form-group">
					<textarea type="text" class="form-control" asp-for="Description" placeholder="Varsa, eklemek istedikleriniz" style="height: 200px !important;"></textarea>
				</div>
				<button class="btn-block btn btn-outline-success rounded-pill py-4">Rezervasyonu Tamamla</button>
			</form>
		</div>
	</div>

</div>


<script>
	document.addEventListener("DOMContentLoaded", function() {
		var PickUpLocation = document.getElementById("@Html.IdFor(x => x.PickUpLocationId)");
		if (PickUpLocation) {
			PickUpLocation.options[0].disabled = true;
		}

		var DropOffLocation = document.getElementById("@Html.IdFor(x => x.DropOffLocationId)");
		if (DropOffLocation) {
			DropOffLocation.options[0].disabled = true;
		}
	});
</script>