@{
	ViewData["Title"] = "BlogDetails";
	Layout = "~/Views/Shared/_UILayout.cshtml";
}

<section class="hero-wrap hero-wrap-2 js-fullheight" style="background-image: url('/carbook-master/images/bg_3.jpg');" data-stellar-background-ratio="0.5">
	<div class="overlay"></div>
	<div class="container">
		<div class="row no-gutters slider-text js-fullheight align-items-end justify-content-start">
			<div class="col-md-9 ftco-animate pb-5">
				<p class="breadcrumbs"><span class="mr-2"><a href="/Home/Index/">Home <i class="ion-ios-arrow-forward"></i></a></span> <span class="mr-2"><a href="/Blog/Index/">Bloglar <i class="ion-ios-arrow-forward"></i></a></span> <span>Blog Detayları <i class="ion-ios-arrow-forward"></i></span></p>
				<h1 class="mb-3 bread">Blog Detayları & Yorumlar</h1>
			</div>
		</div>
	</div>
</section>

<section class="ftco-section ftco-degree-bg">
	<div class="container">
		<div class="row">


			<div class="col-md-8 ftco-animate">
				<div class="pt-5 mt-5">
					@await Component.InvokeAsync("_BlogDetailsMainViewPartial", new { id = ViewBag.BlogId })
					@await Html.PartialAsync("LeaveAComment")
				</div>
			</div>
			



			<div class="col-md-4 sidebar ftco-animate">

				@await Component.InvokeAsync("_BlogDetailsSidebarSearchBoxViewPartial")

				@await Component.InvokeAsync("_BlogDetailsCategoryViewPartial")

				@await Component.InvokeAsync("_BlogDetailsRecentBlogsViewPartial")

				@await Component.InvokeAsync("_BlogDetailsTagCloudViewPartial", new { id = ViewBag.BlogId })

@* 				@await Component.InvokeAsync("_BlogDetailsParagraphViewPartial")
 *@

			</div>

		
		</div>
	</div>
	
</section> <!-- .section -->
