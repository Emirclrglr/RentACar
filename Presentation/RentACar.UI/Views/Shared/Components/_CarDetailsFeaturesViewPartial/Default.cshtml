@model IEnumerable<ResultCarFeatureByCarIdDto>
@{
    var features = Model.ToList();
}
<div class="tab-pane fade show active" id="pills-description" role="tabpanel" aria-labelledby="pills-description-tab">
    <div class="row">
        @for (int i = 0; i < features.Count; i += 5)
        {
            <div class="col-md-4">
                <ul class="features">
                    @for (int j = i; j < Math.Min(i + 5, features.Count); j++)
                    {
                        if (features[j].IsAvailable == true)
                        {
                            <li class="check">
                                <span class="ion-ios-checkmark"></span>
                                @features[j].CarFeatureName
                            </li>
                        }
                        else
                        {
                            <li class="remove">
                                <span class="ion-ios-close"></span>
                                @features[j].CarFeatureName
                            </li>
                        }
                    }
                </ul>
            </div>
        }
    </div>
</div>