
@{
    ViewData["Title"] = "CarDeatils";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<section class="hero-wrap hero-wrap-2 js-fullheight" style="background-image: url('/carbook-master/images/bg_3.jpg');" data-stellar-background-ratio="0.5">
	<div class="overlay"></div>
	<div class="container">
		<div class="row no-gutters slider-text js-fullheight align-items-end justify-content-start">
			<div class="col-md-9 ftco-animate pb-5">
				<p class="breadcrumbs"><span class="mr-2"><a href="/">Home <i class="ion-ios-arrow-forward"></i></a></span> <span>Araç Detayları <i class="ion-ios-arrow-forward"></i></span></p>
				<h1 class="mb-3 bread">Araç Detayları</h1>
			</div>
		</div>
	</div>
</section>


<section class="ftco-section ftco-car-details">
	<div class="container">

		@await Component.InvokeAsync("_CarDetailsMainCarFeaturesViewPartial", new { Id = ViewBag.Id })

		<div class="row">
			<div class="col-md-12 pills">
				<div class="bd-example bd-example-tabs">
					<div class="d-flex justify-content-center">
						<ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">

							<li class="nav-item">
								<a class="nav-link active" id="pills-description-tab" data-toggle="pill" href="#pills-description" role="tab" aria-controls="pills-description" aria-expanded="true">Araç Özellikleri</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" id="pills-manufacturer-tab" data-toggle="pill" href="#pills-manufacturer" role="tab" aria-controls="pills-manufacturer" aria-expanded="true">Araç Açıklaması</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" id="pills-review-tab" data-toggle="pill" href="#pills-review" role="tab" aria-controls="pills-review" aria-expanded="true">Değerlendirmeler</a>
							</li>
						</ul>
					</div>

					<div class="tab-content" id="pills-tabContent">

						@await Component.InvokeAsync("_CarDetailsFeaturesViewPartial", new { Id = ViewBag.Id })

						@await Component.InvokeAsync("_CarDetailsDescriptionViewPartial", new { Id = ViewBag.Id })

						@await Component.InvokeAsync("_CarDetailsReviewViewPartial", new { Id = ViewBag.Id })

					</div>
				</div>
			</div>
		</div>
	</div>
</section>


