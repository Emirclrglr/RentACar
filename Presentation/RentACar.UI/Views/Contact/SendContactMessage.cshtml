@model CreateContactDto
<form method="post" asp-action="SendContactMessage" asp-controller="Contact" class="bg-light p-5 contact-form">
    <div class="form-group">
        <input type="text" class="form-control" placeholder="Adınız" asp-for="Name">
    </div>
    <div class="form-group">
        <input type="text" class="form-control" placeholder="Email Adresiniz" asp-for="Email">
    </div>
    <div class="form-group">
        <input type="text" class="form-control" placeholder="Konu" asp-for="Subject">
    </div>
    <div class="form-group">
        <textarea cols="30" rows="7" class="form-control" placeholder="Mesajınız" asp-for="MessageContent"></textarea>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary py-3 px-5">Gönder</button>
    </div>
</form>

