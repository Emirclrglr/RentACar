@model ResultCarBookingDto
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_UILayout.cshtml";
}

<style>
	.select-box {
		color: rgba(255, 255, 255, 0.7) !important;
		font-size: 12px;
		border: 1px solid rgba(255, 255, 255, 0.1) !important;
		padding: 12px;
		width: 100%;
	}
</style>

@await Component.InvokeAsync("_HomeCoverViewPartial")

@* @await Component.InvokeAsync("_CarBookingFilterViewPartial")
 *@

<section class="ftco-section ftco-no-pt bg-light">
	<div class="container">
		<div class="row no-gutters">
			<div class="col-md-12	featured-top">
				<div class="row no-gutters">
					<div class="col-md-4 d-flex align-items-center">
						<form method="post" class="request-form ftco-animate bg-primary">
							<h2>Aracınızı Şimdi Kiralayın</h2>
							<div class="form-group">
								<label for="" class="label">Alınacak Lokasyon</label>
								@Html.DropDownListFor(x => x.LocationId, (List<SelectListItem>)ViewBag.locationList, "Lütfen Lokasyon Seçimi Yapınız", new { @class = "bg-primary select-box", name = "locationId" })
							</div>
							<div class="d-flex">
								<div class="form-group mr-2">
									<label for="" class="label">Alınmak İstenen Tarih</label>
									<input type="text" class="form-control" name="book_pick_date" id="book_pick_date" placeholder="Tarih Seçiniz">
								</div>
								<div class="form-group ml-2">
									<label for="" class="label">İade Tarihi</label>
									<input type="text" class="form-control" name="book_off_date" id="book_off_date" placeholder="Tarih Seçiniz">
								</div>
							</div>
							<div class="form-group">
								<label for="" class="label">Alış Saati</label>
								<input type="text" class="form-control" name="time_pick" id="time_pick" placeholder="Saat">
							</div>
							<div class="form-group">
								<label for="" class="label">İade Saati</label>
								<input type="text" class="form-control" name="time_off" id="time_off" placeholder="Saat">
							</div>
							<div class="form-group">
								<button class="btn btn-secondary py-3 px-4">Uygun Araçları Listele</button>
							</div>

						</form>
					</div>

					<div class="col-md-8 d-flex align-items-center">
						<div class="services-wrap rounded-right w-100">
							<h3 class="heading-section mb-4">Araç Kiralamanın En Basit Yolu</h3>
							<div class="row d-flex mb-4">
								<div class="col-md-4 d-flex align-self-stretch ftco-animate">
									<div class="services w-100 text-center">
										<div class="icon d-flex align-items-center justify-content-center"><span class="flaticon-route"></span></div>
										<div class="text w-100">
											<h3 class="heading mb-2">Aracını Almak İstediğin Konumu Seç</h3>
										</div>
									</div>
								</div>
								<div class="col-md-4 d-flex align-self-stretch ftco-animate">
									<div class="services w-100 text-center">
										<div class="icon d-flex align-items-center justify-content-center"><span class="flaticon-handshake"></span></div>
										<div class="text w-100">
											<h3 class="heading mb-2">En Uygun Araçları Gör</h3>
										</div>
									</div>
								</div>
								<div class="col-md-4 d-flex align-self-stretch ftco-animate">
									<div class="services w-100 text-center">
										<div class="icon d-flex align-items-center justify-content-center"><span class="flaticon-rent"></span></div>
										<div class="text w-100">
											<h3 class="heading mb-2">Kiralamayı Tamamla, Hepsi Bu!</h3>
										</div>
									</div>
								</div>
							</div>
							<p><a href="/CarPricing" class="btn btn-primary py-3 px-4">Araç Fiyat Listemizi Görün</a></p>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>


@await Component.InvokeAsync("_HomeFeaturedCarsViewPartial")

@await Component.InvokeAsync("_AboutUsViewPartial")

@await Component.InvokeAsync("_ServicesViewPartial")

@await Component.InvokeAsync("_BecomeADriverViewPartial")

